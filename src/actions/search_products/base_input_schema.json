{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "sku": {
      "type": "string",
      "title": "SKU (Artikelnr)",
      "description": "Hitta en specifik produkt via artikelnummer."
    },
    "search": {
      "type": "string",
      "title": "Sökord",
      "description": "Sök i namn och beskrivning."
    },
    "status": {
      "type": "string",
      "title": "Status",
      "enum": ["any", "draft", "pending", "private", "publish"],
      "default": "publish",
      "description": "Filtrera på t.ex. 'publish' för live-produkter."
    },
    "type": {
      "type": "string",
      "title": "Produkttyp",
      "enum": ["simple", "grouped", "external", "variable"],
      "description": "Välj typ av produkt att hämta."
    },
    "category": {
      "type": "string",
      "title": "Kategori-ID",
      "description": "ID på kategorin (t.ex. 15 eller 15,16,17)."
    },
    "on_sale": {
      "type": "boolean",
      "title": "Endast reaprodukter"
    },
    "min_price": {
      "type": "string",
      "title": "Minsta pris"
    },
    "max_price": {
      "type": "string",
      "title": "Högsta pris"
    }
  }
}
